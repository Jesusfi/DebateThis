<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:paddingLeft="4dp"
                android:layout_height="wrap_content"
                android:text="Started by Jesus Izquierdo"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_category_discussionCard"
                android:layout_width="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_height="match_parent"
                android:text="Politics"
                 />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/tv_initial_card_discussionCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="It time that Trump steps down"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description_discussionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:text="Description"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_article_title_discussionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:textSize="12sp"
            android:maxLines="1"
            android:paddingRight="4dp"
            android:text="Trump deportes Marco Rubio"
            android:textStyle="italic" />
        <TextView
            android:textStyle="italic"
            android:id="@+id/tv_source_discussionCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:visibility="gone"
            android:text="Based off BBC article"
            android:textSize="12sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">
       <TextView
           android:layout_width="0dp"
           android:textSize="14sp"
           android:text="Like"
           android:layout_weight="1"
           android:layout_height="wrap_content"
           android:textColor="@color/colorAccent"
           android:textStyle="bold"
           />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:typeface="normal"
            android:layout_height="wrap_content"
            android:text="Unlike"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"/>


    </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>